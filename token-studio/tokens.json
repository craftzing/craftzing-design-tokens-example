{
  "foundation": {
    "dimension": {
      "scale": { "$type": "dimension", "$value": "2" },
      "xs": { "$type": "dimension", "$value": "4" },
      "sm": {
        "$type": "dimension",
        "$value": "{dimension.xs} * {dimension.scale}"
      },
      "md": {
        "$type": "dimension",
        "$value": "{dimension.sm} * {dimension.scale}"
      },
      "lg": {
        "$type": "dimension",
        "$value": "{dimension.md} * {dimension.scale}"
      },
      "xl": {
        "$type": "dimension",
        "$value": "{dimension.lg} * {dimension.scale}"
      }
    },
    "colors": {
      "black": { "$type": "color", "$value": "#000000" },
      "white": { "$type": "color", "$value": "#ffffff" },
      "gray": {
        "500": { "$type": "color", "$value": "#a0aec0" },
        "700": { "$type": "color", "$value": "#4a5568" }
      },
      "indigo": {
        "400": { "$type": "color", "$value": "#7f9cf5" },
        "600": { "$type": "color", "$value": "#5a67d8" }
      }
    },
    "borderRadius": {
      "sm": { "$type": "borderRadius", "$value": "4" },
      "lg": { "$type": "borderRadius", "$value": "8" }
    }
  },
  "semantic": {
    "fg": {
      "default": { "$type": "color", "$value": "{colors.black}" },
      "muted": { "$type": "color", "$value": "{colors.gray.700}" }
    },
    "bg": {
      "default": { "$type": "color", "$value": "{colors.white}" },
      "muted": { "$type": "color", "$value": "{colors.gray.500}" }
    },
    "accent": {
      "default": { "$type": "color", "$value": "{colors.indigo.400}" },
      "onAccent": { "$type": "color", "$value": "{colors.white}" }
    },
    "border": {
      "radius": { "$type": "borderRadius", "$value": "{borderRadius.lg}" }
    }
  }
}
3
{
  "compilerOptions": {
    "checkJs": true,
    "allowJs": true,
    "strict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "target": "ES2020",
    "module": "Node16",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.js"],
  "exclude": ["node_modules"]
}
